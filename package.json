{
  "name": "manim-workflows",
  "displayName": "Manim Workflows",
  "description": "Replicates Grant's workflows for his videos for Visual Studio Code and the Community Edition of Manim.",
  "version": "0.0.1",
  "publisher": "Koratun",
  "engines": {
    "vscode": "^1.94.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "manim-workflows.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "manim-workflows.copyToTerminal",
        "title": "Copy Selection to Terminal"
      }
    ],
    "keybindings": [
      {
        "key": "ctrl+shift+t",
        "command": "manim-workflows.copyToTerminal",
        "when": "editorTextFocus"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Koratun/manim_workflows"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@types/vscode": "^1.94.0",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2"
  }
}